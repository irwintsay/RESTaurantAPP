<h2>Welcome</h2>

<%= form_tag '/sessions', method: :post do %>
<div class="row">
  <div class="four columns">
    <%= label_tag :username %>
    <%= text_field_tag :username %>
  </div>
  <div class="four columns">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div class="four columns">
    <%= submit_tag 'Log in' %>
  </div>
</div>
<% end %>
