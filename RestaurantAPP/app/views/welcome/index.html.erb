<div class="row">
  <div class="col s12 center">
    <h2>Welcome</h2>

    <%= form_tag '/sessions', method: :post do %>
    <div class="row center">
      <div class="col s12 m6 offset-m3 l4 offset-l4">
        <%= label_tag :username %>
        <%= text_field_tag :username %>
      </div>
    </div>
    <div class="row center">
      <div class="col s12 m6 offset-m3 l4 offset-l4">
        <%= label_tag :password %>
        <%= password_field_tag :password %>
      </div>
    </div>
    <div class="row center">
      <div class="col s12 m6 offset-m3 l4 offset-l4">
        <%= submit_tag 'Sign in' %>
      </div>
    </div>
    <% end %>
  </div>
</div>
