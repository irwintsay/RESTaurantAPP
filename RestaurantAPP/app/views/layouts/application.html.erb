<!DOCTYPE html>
<html>
<head>
  <title>RestaurantAPP</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="main" class="container grey lighten-2">
    <div class="navigation row">
      <div class="col right">
        <ul>
          <!-- <li><a class="black-text" href="/">Home</a></li> -->
          <li><%= button_to "Home", profile_path, method: :get %></li>
          <% if session[:user_id] %>
          <li><%= button_to "Sign out", delete_session_path, method: :delete %></li>
          <% else %>
          <!-- <li><a class="black-text" href="/">Login</a></li> -->
          <li><%= button_to "Sign in", '/', method: :get %></li>
          <% end %>
          <!-- <li><a class="black-text" href="/servers/new">Sign up</a></li> -->
          <li><%= button_to "Create Account", '/servers/new', method: :get %></li>
        </ul>
      </div>
    </div>

    <div class="header row">
      <div class="col s12 center">
        <h1 class="title">Order.<span class="red-text text-darken-1">ly</span></h1>
      </div>
    </div>

    <div class="container">

      <%= yield %>

    </div>
  </div>
</body>
</html>
